<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context="com.example.administrator.missphoto.MainActivity">




        <!-- 个人消息 -->
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- 头像 -->
            <ImageButton
                android:id="@+id/IbReqitemHeadphoto"
                android:background="#00000000"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/touxiang1"/>
            <!-- 昵称 -->
            <TextView
                android:id="@+id/TvReqitemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/IbReqitemHeadphoto"
                android:text="喵星狗宠物店老版"
                android:gravity="center_vertical"/>
        </RelativeLayout>

        <!-- 具体需求 -->
        <TextView
            android:id="@+id/TvReqitemRequest"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:background="@drawable/textview_border"
            android:hint="具体要求:"
            android:gravity="top"/>

        <!-- 发布时间 -->
        <TextView
            android:id="@+id/TvReqitemTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/textview_border"
            android:gravity="end"
            android:paddingRight="30dp"
            android:layout_marginBottom="3dp"
            android:hint="发布时间："/>


</LinearLayout>


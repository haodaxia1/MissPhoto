<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorPrimaryDarkzs"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/IvCameraitemHeadportrait"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_margin="8dp"
            android:src="@drawable/touxiang1"
             />
        <TextView
            android:id="@+id/TvCameraitemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奇异博士"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/IvCameraitemHeadportrait" />
        <Button
            android:layout_width="66dp"
            android:layout_height="23dp"
            android:background="@drawable/yuanjiao"
            android:paddingLeft="7dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/userme"
            android:text="关注">
        </Button>
    </RelativeLayout>

    <ImageView
        android:id="@+id/IvCameraitemImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="1dp"
        android:src="@drawable/shili5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="118dp"
            android:layout_height="23dp"
            android:paddingLeft="4dp"
            android:background="@drawable/yuanjiao"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/liked"
            android:scaleType="fitXY"
            android:text="91位用户点赞">
        </Button>
        <Button
            android:layout_width="62dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:paddingLeft="4dp"
            android:background="@drawable/yuanjiao"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/like"
            android:text="点赞"
            >
        </Button>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/EtCameraitemComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/yuanjiao"
            android:hint="请输入您的评论"/>
    </RelativeLayout>
</LinearLayout>
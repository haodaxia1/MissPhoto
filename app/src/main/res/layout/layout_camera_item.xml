<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#eaf8fd"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/IvCameraitemHeadportrait"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_margin="8dp"
            android:src="@drawable/touxiang1"
            />
        <TextView
            android:id="@+id/TvCameraitemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奇异博士"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/IvCameraitemHeadportrait" />

    </RelativeLayout>

    <ImageView
        android:background="#ffffff"
        android:id="@+id/IvCameraitemImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="1dp"
        android:src="@drawable/shili5"/>

</LinearLayout>